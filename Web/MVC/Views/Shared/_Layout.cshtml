<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
   
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-lg  navbar-toggleable-lg navbar-dark bg-dark  box-shadow mb-0" style="min-height: 100px; background-color: #212121;">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Catalog" asp-action="Index">
                        Game Store
                        <img src="~/images/logo.png" alt="Logo" style="max-height: 40px; max-width: 40px;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    </div>
            <div class="container-fluid">
                <div class="d-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item" , style="border: 1px solid #ffffff; padding: 5px; border-radius: 5px; margin: 10px">
                            <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Index" asp-route-platformFilterApplied="1">PS4</a>
                        </li>
                        <li class="nav-item" , style="border: 1px solid #ffffff; padding: 5px; border-radius: 5px; margin: 10px">
                            <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Index" asp-route-platformFilterApplied="2">PS5</a>
                        </li>
                        <li class="nav-item" , style="border: 1px solid #ffffff; padding: 5px; border-radius: 5px; margin: 10px">
                            <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Index" asp-route-platformFilterApplied="3">XBOX</a>
                        </li>
                        <li class="nav-item" , style="border: 1px solid #ffffff; padding: 5px; border-radius: 5px; margin: 10px">
                            <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Index" asp-route-platformFilterApplied="4">NINTENDO</a>
                        </li>
                    </ul>
                </div>
            </div>
            <a class="nav-link" asp-area="" asp-controller="Basket" asp-action="Index">Cart</a>
            @await Html.PartialAsync("_UserMenuPartial")          
        </nav>
        <div class="banner">
            <img src="~/images/banner.jpeg" alt="Banner Image" , style="width: 100%; height: 620px; object-fit: cover;  border: 0;">
        </div>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
